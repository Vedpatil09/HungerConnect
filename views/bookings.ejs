<!DOCTYPE html>
<html>
<head>
  <title>My Bookings</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<%- include("partials/navbar") %>

<div class="container">

  <h2>My Bookings</h2>

  <% bookings.forEach(b => { %>

    <div class="food-card">

      <img src="<%= b.food.image %>" class="food-img" />

      <div class="food-info">

        <h3><%= b.food.title %></h3>

        <p>Status: <%= b.status %></p>
        <p>Location: <%= b.food.location %></p>

      </div>

    </div>

  <% }) %>

</div>

</body>
</html>
