<!DOCTYPE html>
<html>
<head>
  <title>My Donations</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<%- include("partials/navbar") %>

<div class="container">

  <h2 class="page-title">My Donations</h2>

  <% if (foods.length === 0) { %>

    <p>You have not added any donations yet.</p>

  <% } else { %>

    <div class="food-grid">

      <% foods.forEach(food => { %>

        <%- include("partials/foodCard", { food }) %>

      <% }) %>

    </div>

  <% } %>

</div>

<!-- Food Details Modal -->
<%- include("partials/foodDetailsModal") %>

<!-- Modal JS -->
<script src="/js/modal.js"></script>

</body>
</html>
